.index-container {
  padding-bottom: 20rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.top-section {
  background: linear-gradient(135deg, var(--primary-color), var(--dark-primary-color));
  padding: 30rpx 30rpx 80rpx;
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.shop-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  color: #fff;
}

.shop-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.shop-name-status {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.shop-name {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.shop-slogan {
  font-size: 26rpx;
  opacity: 0.9;
}

.shop-status {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  align-self: flex-start;
  margin-top: 8rpx;
}

.shop-status.open {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.shop-status.closed {
  background-color: rgba(0, 0, 0, 0.2);
  color: #ccc;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 15rpx;
  color: var(--primary-color);
}

.search-placeholder {
  color: #999;
}

.category-nav {
  white-space: nowrap;
  padding: 20rpx 0;
  background-color: #fff;
  margin: -50rpx 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: var(--card-shadow);
  position: relative;
  z-index: 2;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: var(--text-color-dark);
  position: relative;
}

.category-item:after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background-color: var(--primary-color);
  transition: width 0.3s;
}

.category-item.active {
  color: var(--primary-color);
  font-weight: bold;
}

.category-item.active:after {
  width: 40rpx;
}

.loading-container {
  margin: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-color-light);
}

.dish-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--card-shadow);
  position: relative;
  overflow: hidden;
}

.dish-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 36rpx;
  background-color: var(--primary-color);
  margin: 30rpx 0 0 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color-dark);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.dish-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.dish-item {
  width: 48%; /* ‰∏§‰∏™ËèúÂìÅ‰∏ÄË°å */
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: transform 0.3s, box-shadow 0.3s;
}

.dish-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 100%;
  height: 200rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.dish-info {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color-dark);
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-price {
  font-size: 32rpx;
  color: var(--price-color);
  font-weight: bold;
}

.dish-price:before {
  content: '¬•';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.no-data-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 50rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-data-tip::before {
  content: 'üòî';
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

