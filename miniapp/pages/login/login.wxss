.login-container {
  padding: 80rpx 40rpx 0 40rpx;
  background: #f7fafd;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #409EFF;
  margin-top: 100rpx;
  letter-spacing: 4rpx;
}
.login-subtitle {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 60rpx;
  margin-top: 12rpx;
}
.login-tabs {
  display: flex;
  width: 100%;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #e6f0fa;
}
.tab {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 0;
  color: #8bb8f7;
  border-bottom: 4rpx solid transparent;
  transition: all 0.2s;
}
.tab.active {
  color: #409EFF;
  border-bottom: 4rpx solid #409EFF;
  font-weight: bold;
  background: #e6f0fa;
}
.login-form {
  width: 100%;
  margin-top: 30rpx;
}
.input-group {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx #e6f0fa;
  margin-bottom: 32rpx;
  padding: 0 24rpx;
}
.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.login-input {
  flex: 1;
  height: 88rpx;
  border: none;
  font-size: 32rpx;
  background: transparent;
}
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(90deg, #409EFF 60%, #66b1ff 100%);
  color: #fff;
  font-size: 36rpx;
  border-radius: 44rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 24rpx #409eff33;
  font-weight: bold;
  border: none;
}
.login-tips {
  margin-top: 32rpx;
  color: #aaa;
  font-size: 26rpx;
  text-align: center;
}
.test-user, .test-pwd {
  color: #409EFF;
  font-weight: bold;
}
.login-footer {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: #bbb;
  font-size: 24rpx;
} 