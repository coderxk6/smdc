@import "/styles/theme.wxss";

.login-container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(180deg, var(--primary-light) 0%, #ffffff 30%);
  position: relative;
  overflow: hidden;
}

.header {
  text-align: center;
  margin: 60rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 16rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
}

.login-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
  position: relative;
  z-index: 1;
}

.tab {
  position: relative;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

.login-form {
  margin: 48rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
}

.test-account {
  font-size: 24rpx;
  color: var(--text-description);
  text-align: center;
  margin-top: 24rpx;
}

.login-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 48rpx auto;
  width: 90%;
  height: 88rpx;
  background: var(--primary-gradient);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(0, 151, 255, 0.2);
  transition: all 0.3s ease;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 151, 255, 0.2);
}

.wechat-button {
  background: #07c160;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.2);
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.login-footer {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-description);
}

.decoration {
  position: absolute;
  border-radius: 50%;
  background: var(--primary-color);
  opacity: 0.1;
}

.decoration-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -200rpx;
}