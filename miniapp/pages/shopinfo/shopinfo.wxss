/* miniapp/pages/shopinfo/shopinfo.wxss */
.container {
  padding: 20rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.shop-header {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.shop-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #eee;
  flex-shrink: 0;
}

.shop-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.shop-slogan {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.shop-status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.shop-status.open {
  background-color: #e6f7e2;
  color: #52c41a;
}

.shop-status.closed {
  background-color: #f0f2f5;
  color: #999;
}

.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #888;
  min-width: 120rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.map-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

#shopMap {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
} 