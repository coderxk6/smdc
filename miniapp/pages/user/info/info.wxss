/* pages/user/info/info.wxss */
@import "/styles/theme.wxss"; /* 导入主题颜色 */

.user-info-container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  height: 100rpx;
  box-shadow: var(--card-shadow);
  position: relative;
  overflow: hidden;
}

.form-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 6rpx;
  background-color: var(--primary-color);
  opacity: 0.2;
}

.label {
  width: 160rpx;
  font-size: 32rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  height: 100%;
  padding: 0;
}

.placeholder-style {
  color: #999;
}

.picker-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: right;
  padding-right: 20rpx;
}

.avatar-item {
  height: 160rpx;
  padding: 0 30rpx;
  justify-content: space-between;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
  padding: 0; /* 移除button默认padding */
  background-color: transparent; /* 移除button默认背景 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper::after {
  border: none; /* 移除button默认边框 */
}

.avatar {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.camera-icon-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background-color: rgba(0, 151, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon-text {
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
}

.arrow-right {
  font-size: 46rpx;
  color: #ccc;
  font-weight: 300;
  padding-left: 20rpx;
}

.button-group {
  margin-top: 50rpx;
}

.submit-btn {
  font-size: 32rpx;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(0, 151, 255, 0.25);
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 151, 255, 0.2);
}